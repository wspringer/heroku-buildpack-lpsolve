#!/usr/bin/env bash

echo "-----> Installing lpsolve 5.5.0.13"

mkdir -p "$1" "$2"
build=$(cd "$1/" && pwd)

cd $1
curl 'https://s3.amazonaws.com/nxt.flotsam.nl/lp_solve_5.5.2.5_exe_ux64.tar.gz' -O
mkdir -p vendor/lpsolve
gzip -dc lp_solve_5.5.2.5_exe_ux64.tar.gz | tar -C vendor/lpsolve -xf -
#tar -C vendor/lpsolve -xvf lp_solve_5.5.0.13_exe.tar.gz

mkdir -p $build/.profile.d
echo 'PATH=$PATH:/app/vendor/lpsolve' > $build/.profile.d/lp_solve.sh
